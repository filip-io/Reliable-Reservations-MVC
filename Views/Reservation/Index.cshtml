@model List<Reliable_Reservations_MVC.Models.Reservation.ReservationDetailsViewModel>

<h1>@ViewData["Title"]</h1>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}

@if (ViewData["ResponseError"] != null)
{
    <p class="alert alert-danger">@ViewData["ResponseError"]</p>
}
else if (Model == null || !Model.Any())
{
    <p>No reservations exist.</p>
    <br />
    <a asp-action="Create" asp-controller="Reservation" class="btn btn-primary">New reservation</a>
}
else
{
    @foreach (var reservation in Model)
    {
        <div class="card" style="width:26 rem; margin-bottom: 10px;">
            <div class="card-body">
                <h5 class="card-title">@reservation.ReservationDate</h5>
                <h5>@reservation.Customer.FirstName @reservation.Customer.LastName</h5>
                <p class="card-text">@reservation.Status</p>

                <a asp-controller="Reservation" asp-action="Details" asp-route-id="@reservation.ReservationId" class="btn btn-info">Details</a>
                <a asp-controller="Reservation" asp-action="Edit" asp-route-id="@reservation.ReservationId" class="btn btn-warning">Edit</a>
                
                <button class="btn btn-danger" onclick="showDeleteModal('@reservation.ReservationId')">Delete</button>
            </div>
        </div>
    }

    <br />
    <a asp-action="Create" asp-controller="Reservation" class="btn btn-primary">New reservation</a>
}

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this reservation?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post" asp-action="Delete" style="display:inline;">
                    <input type="hidden" id="reservationId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showDeleteModal(reservationId) {
        $('#reservationId').val(reservationId);
        $('#deleteModal').modal('show');
    }
</script>